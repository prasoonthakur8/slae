{
  "manifest_version": 3,
  "name": "SLAE",
  "version": "1.0",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "scripting",
    "webRequest",
    "activeTab",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}